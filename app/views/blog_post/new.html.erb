
<%= form_with url: "/blog_posts", local: true, :class => "box" do |form| %>
    <h1>New Blog Post</h1>
        <%= form.label :title %>
        <%= form.text_field :title %>

        <br>

        <%= form.label :content %>
        <%= form.text_field :content %>

        <br>

        <%= form.submit :Submit %>

    <% end %>

