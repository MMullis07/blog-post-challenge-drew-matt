<%= form_with url: "/blog_posts/#{params[:id]}", method: "patch", local: true, :class => "box" do |form| %>
    <h1>Edit Blog Post</h1>
    <%= form.label :title %>
    <%= form.text_field :title %>

    <br>

    <%= form.label :content %>
    <%= form.text_field :content %>

    <br>

    <%= form.submit :Submit %>

<% end %>